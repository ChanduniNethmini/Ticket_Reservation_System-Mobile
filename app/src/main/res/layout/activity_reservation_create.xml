<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservationCreate">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginEnd="2dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center"
            android:text="Complete Your Reaservation"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:background="#E5E4E2"
        android:layout_width="391dp"
        android:layout_height="263dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".ReservationCreate">

        <!-- Start Location -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:paddingEnd="8dp"
                android:text="Train Name:"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/trainName"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:hint="Name"
                android:minHeight="48dp"
                android:textSize="20dp" />
        </LinearLayout>

        <!-- Destination -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:paddingEnd="8dp"
                android:text="From:"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/trainStart"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:paddingEnd="8dp"
                android:text="To:"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/trainStop"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:textSize="20dp" />
        </LinearLayout>

        <!-- Number of Passengers -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:paddingEnd="8dp"
                android:text="Seats:"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/editPassengers"
                android:layout_width="21dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:hint="Seat"
                android:minHeight="48dp"
                android:textSize="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:paddingEnd="8dp"
                android:text="Time:"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/editTime"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:hint="Time"
                android:inputType="number"
                android:minHeight="32dp"
                android:textSize="20dp" />
        </LinearLayout>
        <!-- Class -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:paddingEnd="8dp"
                android:text="Class:"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/classType"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:hint="Class"
                android:inputType="number"
                android:minHeight="48dp"
                android:textSize="20dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:paddingEnd="8dp"
                android:text="Price PP:"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/pricePP"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:hint="price"
                android:inputType="number"
                android:minHeight="48dp"
                android:textSize="20dp" />
        </LinearLayout>

        <!-- Create Reservation Button -->
        <Button
            android:id="@+id/btnCreateReservation"
            android:layout_width="242dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="#000000"
            android:text="Confirm"
            android:textColor="#FFFFFF" />

    </LinearLayout>


    <pl.droidsonroids.gif.GifImageView
        android:layout_width="407dp"
        android:layout_height="346dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/reserve"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
